#include <iostream>
#include <cmath>
#include <iomanip>
#define PI 3.14159265
#include <limits>
using namespace std;
int main()
{
	const int maxArrSize = 5;
	int i, j, e;
	double sine[maxArrSize] = {0, 0.5, 0.707106, 0.866025, 1};
	double cosine[maxArrSize] = {1,0.866025, 0.707106, 0.5, 0};
	double tangent[maxArrSize];

	//float result = 0;


	for (i = 0; i < maxArrSize; i++)
	{
		tangent[i] = sine[i] / cosine[i];
	}
	
	const int angle = 5;
	double degrees[angle] = { 0 ,30 ,45 ,60, 90};


	for (i = 0; i < maxArrSize; i++)
	{
		cout << "Angle " << degrees[i] << " degrees has a tangent value of  " << tangent[i] << "." << endl;
	}
	
	return 0;

}
